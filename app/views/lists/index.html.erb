<div id="home">
  <div class="banner">
    <h1>Save any kind of movies</h1>
  </div>

  <div class="container py-5">
    <div class="row">
      <div class="col-8">
       <h2>My Lists</h2>
        <div class="row justify-content-center align-items-center">
          <% @lists.each do |list| %>
            <div class="col-5 list_card m-1" style='background-image: url("<%= cl_image_path list.photo.key, height: 300, crop: :fill %>")'>
            <%= link_to list.name, list_path(list) %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-4">
        <%= link_to "Create a Movie List", new_list_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>